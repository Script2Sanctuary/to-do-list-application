<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css"> <!-- Optional: Custom CSS -->
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">My To-Do List</h1>

        <!-- Form untuk menambahkan tugas baru -->
        <form action="/tasks" method="POST" class="mb-4">
            <div class="form-row">
                <div class="col">
                    <input type="text" name="title" class="form-control" placeholder="New task" required>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Add Task</button>
                </div>
            </div>
        </form>

        <!-- Daftar tugas -->
        <ul class="list-group">
            <% tasks.forEach(task => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="<%= task.completed ? 'completed' : '' %>"><%= task.title %></span>
                    <div>
                        <form action="/tasks/complete/<%= task._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-sm <%= task.completed ? 'btn-warning' : 'btn-success' %>">
                                <%= task.completed ? 'Mark as Incomplete' : 'Mark as Completed' %>
                            </button>
                        </form>
                        <a href="/edit/<%= task._id %>" class="btn btn-info btn-sm">Edit</a>
                        <form action="/tasks/delete/<%= task._id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>

